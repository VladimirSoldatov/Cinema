@model CinemaContext
@{
    ViewData["Title"] = "Home Page";

}

<div>
    <table class="table">
        <thead>
            <tr>
            <th>Название</th>
            <th>Режисер</th>
            <th>Жанр</th>
            <th>Описание</th>
            </tr>
        </thead>
        
            @foreach (var film in ViewBag.Films)
            {
    <tr>
        <td>
            @film.Name
        </td>
        <td>
            @foreach(var item in  ViewBag.Styles)
            {
                @if (item.Id == film.Id) @item.Name;
            }
        </td>
        <td>
            @foreach (var item in ViewBag.Directors)
            {
                @if (item.Id == film.Id)@item.Name;
            }
        </td>
        <td>
            @film.Description
        </td>
    </tr>
            }
        
    </table>
</div>
